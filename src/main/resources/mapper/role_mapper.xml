<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bigmoim.module.role.repository.RoleRepository">

    <sql id="role_fullColumn">
        roleIdx,
        memberId,
        role,
        create_date,
    </sql>
    <!-- 멤버의 role 리스트 -->
    <select id="findById" resultType="com.bigmoim.module.role.entity.RoleEntity">
        SELECT <include refid="fullColumn"/>
        FROM role
        WHERE memberId = #{memberId}
    </select>
    <!-- Role별 리스트 -->
    <select id="findByRole" resultType="com.bigmoim.module.role.entity.RoleEntity">
        SELECT <include refid="fullColumn"/>
        FROM role
        WHERE role = #{role}
    </select>

    <!-- -->
    <delete id="roleDelete">
        DELETE
        FROM role
        WHERE memberId = #{memberId} and role = #{role}
    </delete>

    <insert id="roleInsert">
        INSERT INTO `moimschedule` (
            memberId,
            role,
            create_date
        )
        VALUES (
                   #{memberId},
                   #{role},
                   #{create_date}
               )
    </insert>

</mapper>